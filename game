    <script>
        // Alpine.js App State
        function app() {
            return {
                // Sidebar state
                sidebarOpen: window.innerWidth >= 992,
                
                // Search state
                searchQuery: '',
                searchResults: [],
                searchLoading: false,
                showResults: false,
                mobileSearchOpen: false,
                
                // Toggle sidebar
                toggleSidebar() {
                    this.sidebarOpen = !this.sidebarOpen;
                },
                
                // Close sidebar
                closeSidebar() {
                    this.sidebarOpen = false;
                },
                
                // Toggle mobile search
                toggleMobileSearch() {
                    this.mobileSearchOpen = !this.mobileSearchOpen;
                    if (this.mobileSearchOpen) {
                        this.showResults = true;
                    }
                },
                
                // Perform search with debounce
                performSearch() {
                    if (this.searchQuery.length < 2) {
                        this.searchResults = [];
                        return;
                    }
                    
                    this.searchLoading = true;
                    
                    // Simulate API call with timeout
                    setTimeout(() => {
                        this.searchResults = [
                            {
                                id: 1,
                                title: 'Subway Surfers',
                                category: 'Endless Runner',
                                thumbnail: 'https://www.talkesport.com/wp-content/uploads/Subway-surfers-characters.jpg'
                            },
                            {
                                id: 2,
                                title: 'Temple Run',
                                category: 'Endless Runner',
                                thumbnail: 'https://via.placeholder.com/40x40/6C63FF/FFFFFF?text=TR'
                            },
                            {
                                id: 3,
                                title: 'Sonic Dash',
                                category: 'Endless Runner',
                                thumbnail: 'https://via.placeholder.com/40x40/6C63FF/FFFFFF?text=SD'
                            },
                            {
                                id: 4,
                                title: 'Minion Rush',
                                category: 'Endless Runner',
                                thumbnail: 'https://via.placeholder.com/40x40/6C63FF/FFFFFF?text=MR'
                            }
                        ];
                        this.searchLoading = false;
                    }, 500);
                },
                
                // Select search result
                selectSearchResult(result) {
                    this.searchQuery = result.title;
                    this.showResults = false;
                    this.mobileSearchOpen = false;
                    // In a real app, you would navigate to the game page
                    console.log('Selected game:', result);
                },
                
                // Close search results when clicking outside
                init() {
                    // Close search results when clicking outside
                    document.addEventListener('click', (e) => {
                        if (!e.target.closest('.search-container')) {
                            this.showResults = false;
                        }
                    });
                    
                    // Handle window resize
                    window.addEventListener('resize', () => {
                        if (window.innerWidth >= 992) {
                            this.sidebarOpen = true;
                        } else {
                            this.sidebarOpen = false;
                        }
                    });
                }
            }
        }

        // Game state variables
        let playTime = 0;
        let playTimer;
        let isFavorite = false;
        let userRating = 0;
        
        // Initialize the game controls
        document.addEventListener('DOMContentLoaded', function() {
            setupFavoriteButton();
            setupRatingSystem();
        });
        
        // Load game function
        function loadGame() {
            // Hide preview and show game
            document.getElementById('gamePreview').classList.add('d-none');
            const wrapper = document.getElementById('gameWrapper');
            wrapper.classList.remove('d-none');
            
            // Load the iframe
            const frame = document.getElementById('gameFrame');
            frame.src = frame.getAttribute('data-src');
            
            // Show controls
            document.getElementById('playTimeDisplay').classList.remove('d-none');
            document.getElementById('screenControls').classList.remove('d-none');
            
            // Start play timer
            startPlayTimer();
        }
        
        // Start play timer
        function startPlayTimer() {
            playTimer = setInterval(function() {
                playTime++;
                updatePlayTimeDisplay();
            }, 1000);
        }
        
        // Update play time display
        function updatePlayTimeDisplay() {
            const minutes = Math.floor(playTime / 60);
            const seconds = playTime % 60;
            const timeString = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            document.getElementById('playTime').textContent = timeString;
        }
        
        // Reload game function
        function reloadGame() {
            const frame = document.getElementById('gameFrame');
            frame.src = frame.src;
            
            // Show reload feedback
            const restartBtn = document.querySelector('.btn-outline-3d');
            const originalHTML = restartBtn.innerHTML;
            restartBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Restarting...</span>';
            
            setTimeout(() => {
                restartBtn.innerHTML = originalHTML;
            }, 1000);
        }
        
        // Setup favorite button functionality
        function setupFavoriteButton() {
            const favoriteBtn = document.getElementById('favoriteBtn');
            
            favoriteBtn.addEventListener('click', function() {
                isFavorite = !isFavorite;
                
                if (isFavorite) {
                    favoriteBtn.innerHTML = '<i class="fas fa-heart"></i><span>Favorited</span>';
                    favoriteBtn.style.background = 'rgba(255, 107, 157, 0.2)';
                    showNotification('Game added to favorites!', 'success');
                } else {
                    favoriteBtn.innerHTML = '<i class="far fa-heart"></i><span>Favorite</span>';
                    favoriteBtn.style.background = 'transparent';
                    showNotification('Game removed from favorites!', 'info');
                }
            });
        }
        
        // Toggle theater mode
        function toggleTheaterMode() {
            const gameContainer = document.querySelector('.game-container');
            gameContainer.classList.toggle('theater-mode');
            
            if (gameContainer.classList.contains('theater-mode')) {
                // Add exit button for theater mode
                const exitBtn = document.createElement('button');
                exitBtn.className = 'btn-3d theater-controls mt-3';
                exitBtn.innerHTML = '<i class="fas fa-times"></i> Exit Theater Mode';
                exitBtn.onclick = toggleTheaterMode;
                
                const theaterControls = document.createElement('div');
                theaterControls.className = 'theater-controls text-center';
                theaterControls.appendChild(exitBtn);
                
                gameContainer.appendChild(theaterControls);
            } else {
                // Remove exit button
                const theaterControls = gameContainer.querySelector('.theater-controls');
                if (theaterControls) {
                    theaterControls.remove();
                }
            }
        }
        
        // Toggle fullscreen
        function toggleFullscreen() {
            const frame = document.getElementById('gameFrame');
            
            if (!document.fullscreenElement) {
                // Enter fullscreen
                if (frame.requestFullscreen) {
                    frame.requestFullscreen();
                } else if (frame.webkitRequestFullscreen) {
                    frame.webkitRequestFullscreen();
                } else if (frame.msRequestFullscreen) {
                    frame.msRequestFullscreen();
                }
            } else {
                // Exit fullscreen
                if (document.exitFullscreen) {
                    document.exitFullscreen();
                } else if (document.webkitExitFullscreen) {
                    document.webkitExitFullscreen();
                } else if (document.msExitFullscreen) {
                    document.msExitFullscreen();
                }
            }
        }
        
        // Rating System
        function setupRatingSystem() {
            const stars = document.querySelectorAll('.rating-star');
            
            stars.forEach(star => {
                star.addEventListener('mouseover', function() {
                    const rating = parseInt(this.getAttribute('data-rating'));
                    highlightStars(rating);
                });
                
                star.addEventListener('mouseout', function() {
                    highlightStars(userRating);
                });
                
                star.addEventListener('click', function() {
                    userRating = parseInt(this.getAttribute('data-rating'));
                    submitRating(userRating);
                });
            });
        }
        
        function highlightStars(rating) {
            const stars = document.querySelectorAll('.rating-star');
            
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.remove('far');
                    star.classList.add('fas');
                } else {
                    star.classList.remove('fas');
                    star.classList.add('far');
                }
            });
        }
        
        function submitRating(rating) {
            // In a real app, you would send this to a server
            const message = document.getElementById('ratingMessage');
            const messageText = document.getElementById('messageText');
            
            messageText.textContent = `Thank you for your ${rating} star rating!`;
            message.classList.remove('d-none');
            
            // Update average rating (simulated)
            const averageRating = document.getElementById('averageRating');
            const totalRatings = document.getElementById('totalRatings');
            
            // Simple simulation of rating update
            const currentAvg = parseFloat(averageRating.textContent);
            const currentTotal = parseInt(totalRatings.textContent.replace(/,/g, ''));
            const newTotal = currentTotal + 1;
            const newAvg = ((currentAvg * currentTotal) + rating) / newTotal;
            
            averageRating.textContent = newAvg.toFixed(1);
            totalRatings.textContent = newTotal.toLocaleString();
            
            // Hide message after 3 seconds
            setTimeout(() => {
                message.classList.add('d-none');
            }, 3000);
        }
        
        function resetRating() {
            userRating = 0;
            highlightStars(0);
            showNotification('Rating reset!', 'info');
        }
        
        // Share game function
        function shareGame() {
            if (navigator.share) {
                navigator.share({
                    title: 'Subway Surfers - Classic Endless Runner Game',
                    text: 'Check out this amazing endless runner game!',
                    url: window.location.href
                })
                .then(() => console.log('Successful share'))
                .catch((error) => console.log('Error sharing:', error));
            } else {
                // Fallback for browsers that don't support Web Share API
                navigator.clipboard.writeText(window.location.href)
                    .then(() => showNotification('Game link copied to clipboard!', 'success'))
                    .catch(() => showNotification('Failed to copy link', 'error'));
            }
        }
        
        // Show notification
        function showNotification(message, type) {
            // Create notification element
            const notification = document.createElement('div');
            notification.className = `position-fixed top-0 end-0 m-3 p-3 rounded shadow ${
                type === 'success' ? 'bg-success' : type === 'error' ? 'bg-danger' : 'bg-info'
            } text-white`;
            notification.textContent = message;
            notification.style.zIndex = '1050';
            
            document.body.appendChild(notification);
            
            // Remove notification after 3 seconds
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }
        
        // Handle fullscreen change events
        document.addEventListener('fullscreenchange', function() {
            // You can add additional logic here if needed
        });
    </script>
    
